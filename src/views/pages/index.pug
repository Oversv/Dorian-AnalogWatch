<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="css/styles.css")
    title Analog Watch
  body
    h1 Analog Watch
    #watch.watch
      <!-- Hours -->
      -let hour = 1;
      while hour <= 12
        -let hoursContainer = `watch__hour container-hour--${hour}`
        -let hourNumber = `hour-${hour}`
        div(class=hoursContainer)
          div(class=hourNumber)=hour++
      
      <!-- Minutes -->
      -let min = 1;
      while min <= 60
        -let minutes=`watch__minutes minutes-${min}`
        if min % 5 === 0
          div(class=`${minutes} quarter`)
            div |
        else          
          div(class=minutes)
            div Ä±
        -min++   
      <!-- hands -->
      #hand.hand-base
      div#handHour.hand-hour
      div#handMinutes.hand__minutes
      div#handSeconds.hand__seconds
      script(src="js/script.js")