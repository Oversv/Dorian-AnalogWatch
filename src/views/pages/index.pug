<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="css/styles.css")
    title Analog Watch
  body
    //h1 Analog Watch
    #watch.watch
      <!-- Hours -->
      -let hour = 1;
      while hour <= 12
        -let hoursContainer = `watch__hour container-hour--${hour}`
        -let hourNumber = `hour-${hour}`
        div(class=hoursContainer)
          div(class=hourNumber)=hour++
      
      <!-- Minutes -->
      -let min = 0;
      while min < 60
        -let minutes=`watch__minutes minutes-${min++}`
        div(class=minutes)
          div |

      <!-- handles -->
      #hand.hand
      div#handHour.hand__hour
      div#handMinutes.hand__minutes
      div#handSeconds.hand__seconds    